<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".card">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            app:cardElevation="10dp"
            android:layout_width="380dp"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image1"
                    android:src="@drawable/delhi1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"/>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/place1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delhi"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/state1"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delhi"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image2"
                    android:src="@drawable/bhopal1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"/>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/place2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bhopal"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/state2"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Madhya Pradesh"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image3"
                    android:src="@drawable/lucknow1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"/>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/place3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lucknow"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/state3"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Uttar Pradesh"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image4"
                    android:src="@drawable/kolkata1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"/>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/place4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kolkata"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/state4"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="West Bengal"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image5"
                    android:src="@drawable/jaipur1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"/>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/place5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jaipur"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/state5"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rajasthan"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    </ScrollView>

</LinearLayout>



