<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/resimg1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/tamra"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/res1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/resimg1"
            android:layout_marginLeft="20dp"/>

        <RatingBar
            android:id="@+id/resrating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res1"
            android:layout_toRightOf="@+id/resimg1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/resdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map/googlemap/location"
            android:layout_below="@+id/resrating"
            android:layout_toRightOf="@+id/resimg1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="10dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>